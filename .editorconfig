root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
# Disable function-naming rule - Compose functions use PascalCase by convention
ktlint_standard_function-naming = disabled
# Disable property-naming rule - conflicts with detekt's TopLevelPropertyNaming
ktlint_standard_property-naming = disabled

# Compose rules (ktlint 1.0+)
ktlint_function_naming_ignore_when_annotated_with = Composable

# Compose rules via io.nlopez.compose.rules:ktlint
ktlint_compose_compositionlocal-allowlist = disabled
ktlint_compose_material-two = disabled
